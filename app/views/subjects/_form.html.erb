<%= simple_form_for @subject, :html => { :multipart => true } do |f| %>
  <%= select_tag(:category_id, options_for_select(@categories),:selected => 1, :prompt => 'Выберите категорию')%>
  <%= f.file_field :subject_img%>
  <%= f.input :title, label: 'Название предмета'%>
  <%= f.input :description, label: 'Описание'%>
  <%= f.input :teacher, label: 'Преподаватель'%>
  <%= f.button :submit, class: "btn-custom2"%>
<% end %>