<%= simple_form_for @subject, :html => { :multipart => true } do |f| %>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => 'Select a category')%>
  <%= f.input :title, label: 'Subject title'%>
  <%= f.input :description%>
  <%= f.input :teacher%>
  <%= f.button :submit%>
<% end %>