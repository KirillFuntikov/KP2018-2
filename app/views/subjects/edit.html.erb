<div class="col-md-6 col-md-offset-3">

  <div class="edit-subject-form">
    <h1>Редактировать предмет</h1>

    <%= simple_form_for @subject, :html => {:multipart => true} do |f| %>
      <%= f.input :title, label: 'Subject title' %>
      <%= f.select :category_id, @categories %>
      <%= f.file_field :subject_img %>
      <%= f.input :description %>
      <%= f.input :teacher %>
    <%= f.button :submit, class: "btn-custom2" %>
    <% end %>
  </div>
</div>